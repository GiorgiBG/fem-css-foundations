{
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
      "plugins": [
          "@ianvs/prettier-plugin-sort-imports"
      ],
      "importOrder": [
          "<THIRD_PARTY_MODULES>",
          "^@/(.*)$",
          "^[./]"
      ],
      "importOrderSeparation": true,
      "importOrderSortSpecifiers": true
  }